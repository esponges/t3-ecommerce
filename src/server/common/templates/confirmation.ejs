<!DOCTYPE html>
<html>
  <head>
    <title>Order confirmation</title>
  </head>
  <body>
    <h1>Order confirmation</h1>
    <p>Dear <%= userName %>,</p>
    <p>Thanks for shopping with us</p>
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% order.orderItems.forEach(item => { %>
          <tr>
            <td><%= item.product.name %></td>
            <td><%= item.quantity %></td>
            <td>USD $<%= item.product.price %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <p>
      <b>
        Total: USD $<%= order.total %>
      </b>
    </p>
    <% if (bankDetails) { %>
      <div>
        <h3>Bank Transfer</h3>
        <p>
          <b>
            Bank:
          </b>
          <%= bankDetails.bankName %>
        </p>
        <p>
          <b>
            Account number:
          </b>
          <%= bankDetails.accountNumber %>
        </p>
        <p>
          <b>
            CLABE:
          </b>
          <%= bankDetails.accountCLABE %>
        </p>
        <p>
          <b>
            Account name:
          </b>
          <%= bankDetails.accountName %>
        </p>
      </div>
    <% } %>
    <p>
      <b>
        Order address:
      </b>
    </p>
    <p>
      <%= order.orderDetail.address %>, 
      <%= order.orderDetail.city %>, 
      <%= order.orderDetail.postalCode %>, 
      <%= order.orderDetail.phone %>
    </p>
    <p>
      <b>
        Order delivery date:
      </b>
    </p>
    <p>
      <%= order.orderDetail.day %> â€”
      <%= order.orderDetail.schedule %>, 
    </p>
    <p>We'll reach you in case we need more information.</p>
    <p>Thanks for shopping with us!</p>
    <h5></h5>
  </body>
</html>
